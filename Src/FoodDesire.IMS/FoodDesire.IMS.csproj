      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Components\NewRecipeIngredientDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Components\RecipeIngredientFormControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Components\ShowErrorsDialog.xaml">
