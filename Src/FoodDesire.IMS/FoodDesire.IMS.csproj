    </Page>
    <Page Update="Components\EmployeeListItemControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Components\IngredientCategoryFormControl.xaml">
      <Generator>MSBuild:Compile</Generator>
